                <option value="nn">Sách nước ngoài</option>
                <option value="truyen">Truyện ma</option>
                <option value="ct">Truyện cổ tích</option>
                <option value="nt">Truyện ngôn tình</option>
                <option value="hh">Truyện hài hước</option>
                <option value="na">Sách nấu ăn</option>
                <option value="kd">Sách kinh doanh</option>
                <option value="kt">Sách kinh tế </option>
                <option value="ls">Sách sử học</option>
                <option value="vd">Sách gì cũng được</option>
                
            </select>
        </div>
        <button type="submit" class="btn btn-primary form__update-item-btn">Thêm</button>
